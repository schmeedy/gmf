			<include name="org.eclipse.emf.validation/doc/com_ibm_xtools_emf_validation_constraintBindings.html"/>			
			<include name="org.eclipse.emf.validation/doc/com_ibm_xtools_emf_validation_constraintProviders.html"/>
			<include name="org.eclipse.emf.validation/doc/com_ibm_xtools_emf_validation_constraintParsers.html"/>
			<include name="org.eclipse.emf.validation/doc/com_ibm_xtools_emf_validation_traversal.html"/>
			<include name="org.eclipse.emf.validation/doc/com_ibm_xtools_emf_validation_validationListeners.html"/>

			<!-- START DIAGRAM LAYER SCHEMAS -->
			<!-- When adding diagram layer extension points please also update the TOC: toc-diagram-ext-pt -->
			<include name="org.eclipse.gmf.runtime.diagram.core/doc/com_ibm_xtools_diagram_viewProviders.html"/>
			
			<include name="org.eclipse.gmf.runtime.diagram.ui/doc/com_ibm_xtools_diagram_ui_editpartProviders.html"/>
			<include name="org.eclipse.gmf.runtime.diagram.ui/doc/com_ibm_xtools_diagram_ui_editpolicyProviders.html"/>
