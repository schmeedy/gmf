			<include name="org.eclipse.gmf.runtime.common.ui.services/doc/com_ibm_xtools_common_ui_services_editorProviders.html"/>
			<include name="org.eclipse.gmf.runtime.common.ui.services/doc/com_ibm_xtools_common_ui_services_iconProviders.html"/>
			<include name="org.eclipse.gmf.runtime.common.ui.services/doc/com_ibm_xtools_common_ui_services_markerNavigationProviders.html"/>			
			<include name="org.eclipse.gmf.runtime.common.ui.services/doc/com_ibm_xtools_common_ui_services_parserProviders.html"/>

			<include name="org.eclipse.gmf.runtime.common.ui.services.action/doc/com_ibm_xtools_common_ui_services_action_actionFilterProviders.html"/>
			<include name="org.eclipse.gmf.runtime.common.ui.services.action/doc/com_ibm_xtools_common_ui_services_action_contributionItemProviders.html"/>
			<include name="org.eclipse.gmf.runtime.common.ui.services.action/doc/com_ibm_xtools_common_ui_services_action_globalActionHandlerProviders.html"/>

			<include name="org.eclipse.gmf.runtime.common.ui.services.dnd/doc/com_ibm_xtools_common_ui_services_dnd_dragDropListenerProviders.html"/>
			<include name="org.eclipse.gmf.runtime.common.ui.services.dnd/doc/com_ibm_xtools_common_ui_services_dnd_transferAdapterProviders.html"/>

